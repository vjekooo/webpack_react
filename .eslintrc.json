{
	"parser": "@typescript-eslint/parser",
	"extends": [
		"plugin:react/recommended",
		"plugin:@typescript-eslint/recommended",
		"standard"
	],
	"plugins": [
		"react",
		"@typescript-eslint"
	],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"react/prop-types": 0,
		"indent": ["error", "tab"],
		"no-tabs": 0
	},
	"settings":  {
		"react":  {
		  "version":  "detect"
		}
	}
}